<UserControl x:Class="OpenPanelsController.Panel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:OpenPanelsController"
             mc:Ignorable="d">
    <Canvas x:Name="PanelShape"  Height="300" Width="300">
        <Rectangle Width="300" Height="300" Stroke="Red" StrokeThickness="5" />
        <Line X1="0" Y1="0" X2="300" Y2="300" Stroke="Red" StrokeThickness="2" />
        <Line X1="300" Y1="0" X2="0" Y2="300" Stroke="Red" StrokeThickness="2" />
        <Line X1="150" Y1="0" X2="150" Y2="300" Stroke="Red" StrokeThickness="2" />
        <Line X1="0" Y1="150" X2="300" Y2="150" Stroke="Red" StrokeThickness="2" />
        <Ellipse Width="300" Height="300" Canvas.Left="0" Canvas.Top="0" Stroke="Red" StrokeThickness="2" />
        <!--<Polygon Points="0,0 300,0 150,260" Stroke="White" StrokeThickness="5" Fill="LightGray" />
        <Button Content="+" Canvas.Left="25" Canvas.Top="130" />
        <Button Content="+" Canvas.Right="25" Canvas.Top="130" />-->
    </Canvas>
</UserControl>